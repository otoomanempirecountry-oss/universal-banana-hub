-- [[ SPRAWDZANIE PLACE ID (BLADE BALL) ]] --
if game.PlaceId ~= 13772394625 then
    warn("Banana Hub: To nie jest Blade Ball!")
    return 
end

-- [[ ≈ÅADOWANIE RAYFIELDA ]] --
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "üçå Banana Hub | Blade Ball",
   LoadingTitle = "Tryb: High Ping (Rayfield Fix)",
   LoadingSubtitle = "Stabilny Auto-F",
   ConfigurationSaving = { Enabled = true, FolderName = "BananaHub_BB_Ray" },
   KeySystem = false
})

-- [[ ZMIENNE ]] --
local VIM = game:GetService("VirtualInputManager")
getgenv().SpamF = false
getgenv().BurstSize = 3 -- Domy≈õlnie 3 klikniƒôcia

-- [[ ZAK≈ÅADKA COMBAT ]] --
local BBTab = Window:CreateTab("Combat ‚öîÔ∏è", nil)

BBTab:CreateSection("Anti-Lag Auto-F")

BBTab:CreateToggle({
   Name = "SPAM F (Burst Mode)",
   CurrentValue = false,
   Callback = function(Value)
        getgenv().SpamF = Value
        
        if Value then
            task.spawn(function()
                while getgenv().SpamF do
                    -- Rayfieldowa pƒôtla bursta
                    for i = 1, getgenv().BurstSize do
                        VIM:SendKeyEvent(true, Enum.KeyCode.F, false, game)
                        task.wait(0.005)
                        VIM:SendKeyEvent(false, Enum.KeyCode.F, false, game)
                    end
                    task.wait(0.02) -- Przerwa dla stabilno≈õci przy wysokim pingu
                end
            end)
            Rayfield:Notify({Title = "Banana Hub", Content = "Auto-F w≈ÇƒÖczony na Rayfieldzie!"})
        end
   end,
})

BBTab:CreateSlider({
   Name = "Burst Size (Si≈Ça klikniƒôƒá)",
   Range = {1, 10},
   Increment = 1,
   Suffix = "klikniƒôƒá",
   CurrentValue = 3,
   Callback = function(Value)
        getgenv().BurstSize = Value
   end,
})

BBTab:CreateSection("Ustawienia pod 200ms Ping")

BBTab:CreateLabel("Ustaw Burst na 5, je≈õli pi≈Çka Ciƒô przenika.")

BBTab:CreateButton({
    Name = "FPS Boost (Zmniejsza Input Lag)",
    Callback = function()
        for _, v in pairs(workspace:GetDescendants()) do
            if v:IsA("BasePart") then 
                v.Material = Enum.Material.SmoothPlastic 
                v.CastShadow = false
            end
            if v:IsA("Decal") or v:IsA("Texture") then v:Destroy() end
            if v:IsA("ParticleEmitter") or v:IsA("Trail") then v.Enabled = false end
        end
        settings().Rendering.QualityLevel = 1
        Rayfield:Notify({Title = "Banana Hub", Content = "Grafika uproszczona!"})
    end
})

-- Anti-AFK
local VirtualUser = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    VirtualUser:CaptureController()
    VirtualUser:ClickButton2(Vector2.new())
end)

Rayfield:Notify({Title = "Banana Hub", Content = "Blade Ball za≈Çadowany poprawnie!"})
