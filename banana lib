-- Banana Interface Library üçå v2 ‚Äì Grok edition (dzia≈Ça 2026)
-- Pe≈Çna libka z splash + UI

local Banana = {}

local TS = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")
local Players = game:GetService("Players")
local lp = Players.LocalPlayer
local CoreGui = game:GetService("CoreGui")

-- Kolory banan
local Theme = {
    Bg = Color3.fromRGB(255, 240, 150),
    Accent = Color3.fromRGB(255, 200, 60),
    Dark = Color3.fromRGB(200, 140, 0),
    Text = Color3.fromRGB(40, 30, 10),
    Green = Color3.fromRGB(100, 220, 80),
}

-- Funkcja splash "Banana Team"
local function ShowSplash()
    local sg = Instance.new("ScreenGui")
    sg.Name = "BananaSplash"
    sg.IgnoreGuiInset = true
    sg.Parent = CoreGui

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1,0,1,0)
    frame.BackgroundColor3 = Color3.fromRGB(10,10,10)
    frame.Parent = sg

    local logo = Instance.new("TextLabel")
    logo.Size = UDim2.new(0.4,0,0.2,0)
    logo.Position = UDim2.new(0.3,0,0.4,0)
    logo.BackgroundTransparency = 1
    logo.Text = "üçå Banana Team üçå"
    logo.TextColor3 = Theme.Accent
    logo.Font = Enum.Font.GothamBlack
    logo.TextSize = 80
    logo.TextStrokeTransparency = 0.6
    logo.TextStrokeColor3 = Color3.new(0,0,0)
    logo.Parent = frame

    local sub = Instance.new("TextLabel")
    sub.Size = UDim2.new(0.5,0,0.1,0)
    sub.Position = UDim2.new(0.25,0,0.6,0)
    sub.BackgroundTransparency = 1
    sub.Text = "Loading the peel... üíõ"
    sub.TextColor3 = Color3.new(1,1,1)
    sub.Font = Enum.Font.Gotham
    sub.TextSize = 40
    sub.Parent = frame

    -- Animka
    logo.TextTransparency = 1
    sub.TextTransparency = 1
    TS:Create(logo, TweenInfo.new(1.5, Enum.EasingStyle.Quint), {TextTransparency = 0}):Play()
    TS:Create(sub, TweenInfo.new(1.8, Enum.EasingStyle.Quint), {TextTransparency = 0}):Play()

    wait(3.5)
    TS:Create(frame, TweenInfo.new(1, Enum.EasingStyle.Back, Enum.EasingDirection.In), {BackgroundTransparency = 1}):Play()
    task.delay(1.2, function() sg:Destroy() end)
end

-- G≈Ç√≥wne okno
function Banana:CreateWindow(title)
    ShowSplash()  -- najpierw splash
    wait(4.5)     -- czekamy a≈º zniknie

    local sg = Instance.new("ScreenGui")
    sg.Name = "BananaUI"
    sg.Parent = CoreGui
    sg.ResetOnSpawn = false

    local main = Instance.new("Frame")
    main.Name = "Main"
    main.Size = UDim2.new(0, 520, 0, 380)
    main.Position = UDim2.new(0.5, -260, 0.5, -190)
    main.BackgroundColor3 = Theme.Bg
    main.BorderSizePixel = 0
    main.Parent = sg

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 14)
    corner.Parent = main

    local stroke = Instance.new("UIStroke")
    stroke.Color = Theme.Dark
    stroke.Thickness = 2
    stroke.Parent = main

    -- Topbar
    local top = Instance.new("Frame")
    top.Size = UDim2.new(1,0,0,45)
    top.BackgroundColor3 = Theme.Accent
    top.Parent = main

    local topCorner = Instance.new("UICorner")
    topCorner.CornerRadius = UDim.new(0,14)
    topCorner.Parent = top

    local lbl = Instance.new("TextLabel")
    lbl.Size = UDim2.new(1,-60,1,0)
    lbl.Position = UDim2.new(0,10,0,0)
    lbl.BackgroundTransparency = 1
    lbl.Text = title or "Banana Hub üçå"
    lbl.TextColor3 = Color3.new(1,1,1)
    lbl.Font = Enum.Font.GothamBold
    lbl.TextSize = 24
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.Parent = top

    -- Close X
    local closeBtn = Instance.new("TextButton")
    closeBtn.Size = UDim2.new(0,35,0,35)
    closeBtn.Position = UDim2.new(1,-45,0,5)
    closeBtn.BackgroundTransparency = 1
    closeBtn.Text = "X"
    closeBtn.TextColor3 = Color3.fromRGB(220,40,40)
    closeBtn.Font = Enum.Font.GothamBold
    closeBtn.TextSize = 26
    closeBtn.Parent = top

    closeBtn.MouseButton1Click:Connect(function()
        TS:Create(main, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Position = UDim2.new(0.5,-260,1.5,0)}):Play()
        task.delay(0.6, function() sg:Destroy() end)
    end)

    -- Content area
    local content = Instance.new("Frame")
    content.Size = UDim2.new(1,-20,1,-55)
    content.Position = UDim2.new(0,10,0,50)
    content.BackgroundTransparency = 1
    content.Parent = main

    local list = Instance.new("UIListLayout")
    list.Padding = UDim.new(0,8)
    list.SortOrder = Enum.SortOrder.LayoutOrder
    list.Parent = content

    local window = {}

    function window:CreateSection(name)
        local sec = Instance.new("TextLabel")
        sec.Size = UDim2.new(1,0,0,30)
        sec.BackgroundTransparency = 1
        sec.Text = "‚îÄ‚îÄ‚îÄ " .. name .. " ‚îÄ‚îÄ‚îÄ"
        sec.TextColor3 = Theme.Dark
        sec.Font = Enum.Font.GothamSemibold
        sec.TextSize = 18
        sec.Parent = content
        return sec
    end

    function window:CreateToggle(options)
        local toggle = Instance.new("Frame")
        toggle.Size = UDim2.new(1,0,0,40)
        toggle.BackgroundColor3 = Theme.Dark
        toggle.Parent = content

        local lbl = Instance.new("TextLabel")
        lbl.Size = UDim2.new(0.75,0,1,0)
        lbl.BackgroundTransparency = 1
        lbl.Text = options.Name or "Toggle"
        lbl.TextColor3 = Theme.Text
        lbl.Font = Enum.Font.Gotham
        lbl.TextSize = 16
        lbl.TextXAlignment = Enum.TextXAlignment.Left
        lbl.Parent = toggle

        local box = Instance.new("Frame")
        box.Size = UDim2.new(0,36,0,20)
        box.Position = UDim2.new(1,-50,0.5,-10)
        box.BackgroundColor3 = Color3.fromRGB(180,50,50)
        box.Parent = toggle

        local boxCorner = Instance.new("UICorner")
        boxCorner.CornerRadius = UDim.new(1,0)
        boxCorner.Parent = box

        local state = options.Default or false
        if state then
            box.BackgroundColor3 = Theme.Green
            box.Position = UDim2.new(1,-20,0.5,-10)
        end

        local btn = Instance.new("TextButton")
        btn.Size = UDim2.new(1,0,1,0)
        btn.BackgroundTransparency = 1
        btn.Parent = toggle

        btn.MouseButton1Click:Connect(function()
            state = not state
            if state then
                TS:Create(box, TweenInfo.new(0.25), {BackgroundColor3 = Theme.Green, Position = UDim2.new(1,-20,0.5,-10)}):Play()
            else
                TS:Create(box, TweenInfo.new(0.25), {BackgroundColor3 = Color3.fromRGB(180,50,50), Position = UDim2.new(1,-50,0.5,-10)}):Play()
            end
            if options.Callback then options.Callback(state) end
        end)

        return toggle
    end

    -- Dodaj slider (prosty przyk≈Çad)
    function window:CreateSlider(options)
        local slider = Instance.new("Frame")
        slider.Size = UDim2.new(1,0,0,50)
        slider.BackgroundColor3 = Theme.Dark
        slider.Parent = content

        local lbl = Instance.new("TextLabel")
        lbl.Size = UDim2.new(0.6,0,0.4,0)
        lbl.BackgroundTransparency = 1
        lbl.Text = options.Name or "Slider"
        lbl.TextColor3 = Theme.Text
        lbl.Font = Enum.Font.Gotham
        lbl.TextSize = 16
        lbl.Parent = slider

        local valueLbl = Instance.new("TextLabel")
        valueLbl.Size = UDim2.new(0.3,0,0.4,0)
        valueLbl.Position = UDim2.new(0.7,0,0,0)
        valueLbl.BackgroundTransparency = 1
        valueLbl.Text = tostring(options.Default or 50)
        valueLbl.TextColor3 = Theme.Accent
        valueLbl.Font = Enum.Font.GothamBold
        valueLbl.TextSize = 16
        valueLbl.Parent = slider

        local bar = Instance.new("Frame")
        bar.Size = UDim2.new(1,-20,0,8)
        bar.Position = UDim2.new(0,10,0.6,0)
        bar.BackgroundColor3 = Color3.fromRGB(100,100,100)
        bar.Parent = slider

        local fill = Instance.new("Frame")
        fill.Size = UDim2.new(0.5,0,1,0)
        fill.BackgroundColor3 = Theme.Accent
        fill.Parent = bar

        local cornerBar = Instance.new("UICorner")
        cornerBar.CornerRadius = UDim.new(1,0)
        cornerBar.Parent = bar
        local fillCorner = Instance.new("UICorner")
        fillCorner.CornerRadius = UDim.new(1,0)
        fillCorner.Parent = fill

        -- Prosta interakcja (klik + drag)
        local dragging = false
        bar.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                dragging = true
            end
        end)
        bar.InputEnded:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                dragging = false
            end
        end)

        UIS.InputChanged:Connect(function(input)
            if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                local mousePos = input.Position.X
                local barAbs = bar.AbsolutePosition.X
                local barSize = bar.AbsoluteSize.X
                local rel = math.clamp((mousePos - barAbs) / barSize, 0, 1)
                local val = math.floor(rel * (options.Max - options.Min) + options.Min)
                fill.Size = UDim2.new(rel, 0, 1, 0)
                valueLbl.Text = tostring(val)
                if options.Callback then options.Callback(val) end
            end
        end)

        return slider
    end

    -- Przyk≈Çadowe elementy (usu≈Ñ jak chcesz)
    window:CreateSection("Main Cheats")
    window:CreateToggle({Name = "Infinite Jump üçå", Default = false, Callback = function(v) print("Inf Jump: " .. tostring(v)) end})
    window:CreateToggle({Name = "No Clip", Default = true})
    window:CreateSlider({Name = "Walk Speed", Min = 16, Max = 200, Default = 50, Callback = function(v) lp.Character.Humanoid.WalkSpeed = v end})

    return window
end

return Banana
