-- Banana UI v6.0 ‚Äì CZYSTA BIBLIOTEKA (bez wbudowanej logiki cheat√≥w)
-- Zak≈Çadki, toggle, slider, button, dropdown, keybind, notify, drag, minimize, ripple
-- U≈ºyj callback√≥w do dodawania w≈Çasnej logiki

local Banana = {}

local TS = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- Theme
local Theme = {
    Background = Color3.fromRGB(18, 18, 24),
    Accent    = Color3.fromRGB(255, 225, 80),
    AccentDark = Color3.fromRGB(220, 190, 40),
    Text      = Color3.fromRGB(240, 240, 255),
    SubText   = Color3.fromRGB(165, 165, 190),
    Element   = Color3.fromRGB(30, 30, 38),
    ElementHover = Color3.fromRGB(45, 45, 55),
    Stroke    = Color3.fromRGB(75, 75, 95),
    Green     = Color3.fromRGB(100, 245, 145),
    Red       = Color3.fromRGB(245, 100, 100),
    Darker    = Color3.fromRGB(10, 10, 16),
}

-- Notify system
local NotificationQueue = {}

local function Notify(title, content, duration)
    duration = duration or 5
    table.insert(NotificationQueue, {title = title, content = content, duration = duration})
end

local function ProcessNotifications()
    if #NotificationQueue == 0 then return end
    local data = table.remove(NotificationQueue, 1)

    local sg = Instance.new("ScreenGui")
    sg.Name = "BananaNotify"
    sg.Parent = CoreGui
    sg.IgnoreGuiInset = true

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 360, 0, 100)
    frame.Position = UDim2.new(1, 30, 1, -120)
    frame.BackgroundColor3 = Theme.Element
    frame.BorderSizePixel = 0
    frame.Parent = sg

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 14)
    corner.Parent = frame

    local stroke = Instance.new("UIStroke")
    stroke.Color = Theme.Accent
    stroke.Thickness = 2
    stroke.Transparency = 0.4
    stroke.Parent = frame

    local icon = Instance.new("TextLabel")
    icon.Size = UDim2.new(0, 50, 0, 50)
    icon.Position = UDim2.new(0, 18, 0, 25)
    icon.BackgroundTransparency = 1
    icon.Text = "üçå"
    icon.TextColor3 = Theme.Accent
    icon.Font = Enum.Font.GothamBlack
    icon.TextSize = 42
    icon.Parent = frame

    local titleLbl = Instance.new("TextLabel")
    titleLbl.Size = UDim2.new(1, -90, 0, 32)
    titleLbl.Position = UDim2.new(0, 80, 0, 18)
    titleLbl.BackgroundTransparency = 1
    titleLbl.Text = data.title
    titleLbl.TextColor3 = Theme.Text
    titleLbl.Font = Enum.Font.GothamBold
    titleLbl.TextSize = 18
    titleLbl.TextXAlignment = Enum.TextXAlignment.Left
    titleLbl.Parent = frame

    local contentLbl = Instance.new("TextLabel")
    contentLbl.Size = UDim2.new(1, -90, 0, 45)
    contentLbl.Position = UDim2.new(0, 80, 0, 50)
    contentLbl.BackgroundTransparency = 1
    contentLbl.Text = data.content
    contentLbl.TextColor3 = Theme.SubText
    contentLbl.Font = Enum.Font.Gotham
    contentLbl.TextSize = 14
    contentLbl.TextWrapped = true
    contentLbl.TextXAlignment = Enum.TextXAlignment.Left
    contentLbl.Parent = frame

    frame.Position = UDim2.new(1, 390, 1, -120)
    TS:Create(frame, TweenInfo.new(0.7, Enum.EasingStyle.Quint), {Position = UDim2.new(1, 30, 1, -120)}):Play()

    task.delay(data.duration, function()
        TS:Create(frame, TweenInfo.new(0.7, Enum.EasingStyle.Back, Enum.EasingDirection.In), {Position = UDim2.new(1, 390, 1, -120)}):Play()
        task.delay(0.8, sg.Destroy, sg)
        ProcessNotifications()
    end)
end

spawn(function()
    while true do
        wait(0.2)
        if #NotificationQueue > 0 then ProcessNotifications() end
    end
end)

-- CreateWindow
function Banana:CreateWindow(options)
    local name = options.Name or "Banana Hub üçå"

    local sg = Instance.new("ScreenGui")
    sg.Name = "BananaUI"
    sg.Parent = CoreGui
    sg.ResetOnSpawn = false

    local main = Instance.new("Frame")
    main.Name = "Main"
    main.Size = UDim2.new(0, 720, 0, 540)
    main.Position = UDim2.new(0.5, -360, 0.5, -270)
    main.BackgroundColor3 = Theme.Background
    main.BorderSizePixel = 0
    main.ClipsDescendants = true
    main.Parent = sg

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 18)
    corner.Parent = main

    local stroke = Instance.new("UIStroke")
    stroke.Color = Theme.Stroke
    stroke.Thickness = 2.2
    stroke.Parent = main

    -- Topbar
    local top = Instance.new("Frame")
    top.Size = UDim2.new(1, 0, 0, 55)
    top.BackgroundColor3 = Theme.Darker
    top.Parent = main

    local topCorner = Instance.new("UICorner")
    topCorner.CornerRadius = UDim.new(0, 18)
    topCorner.Parent = top

    local titleLbl = Instance.new("TextLabel")
    titleLbl.Size = UDim2.new(0.7, 0, 1, 0)
    titleLbl.Position = UDim2.new(0, 25, 0, 0)
    titleLbl.BackgroundTransparency = 1
    titleLbl.Text = name
    titleLbl.TextColor3 = Theme.Accent
    titleLbl.Font = Enum.Font.GothamBlack
    titleLbl.TextSize = 26
    titleLbl.TextXAlignment = Enum.TextXAlignment.Left
    titleLbl.Parent = top

    local minBtn = Instance.new("TextButton")
    minBtn.Size = UDim2.new(0, 44, 0, 44)
    minBtn.Position = UDim2.new(1, -100, 0, 5)
    minBtn.BackgroundTransparency = 1
    minBtn.Text = "‚àí"
    minBtn.TextColor3 = Theme.Text
    minBtn.Font = Enum.Font.GothamBold
    minBtn.TextSize = 34
    minBtn.Parent = top

    local closeBtn = Instance.new("TextButton")
    closeBtn.Size = UDim2.new(0, 44, 0, 44)
    closeBtn.Position = UDim2.new(1, -50, 0, 5)
    closeBtn.BackgroundTransparency = 1
    closeBtn.Text = "√ó"
    closeBtn.TextColor3 = Theme.Red
    closeBtn.Font = Enum.Font.GothamBold
    closeBtn.TextSize = 34
    closeBtn.Parent = top

    local minimized = false
    minBtn.MouseButton1Click:Connect(function()
        minimized = not minimized
        if minimized then
            TS:Create(main, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {Size = UDim2.new(0, 720, 0, 55)}):Play()
        else
            TS:Create(main, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {Size = UDim2.new(0, 720, 0, 540)}):Play()
        end
    end)

    closeBtn.MouseButton1Click:Connect(function()
        TS:Create(main, TweenInfo.new(0.6, Enum.EasingStyle.Back), {Position = UDim2.new(0.5, -360, 1.5, 0)}):Play()
        task.delay(0.65, sg.Destroy, sg)
    end)

    -- Drag
    local dragging, dragInput, dragStart, startPos
    top.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = main.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then dragging = false end
            end)
        end
    end)

    top.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            main.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    -- Tab bar
    local tabBar = Instance.new("ScrollingFrame")
    tabBar.Size = UDim2.new(0, 190, 1, -65)
    tabBar.Position = UDim2.new(0, 0, 0, 65)
    tabBar.BackgroundTransparency = 1
    tabBar.ScrollBarThickness = 6
    tabBar.ScrollBarImageColor3 = Theme.Accent
    tabBar.CanvasSize = UDim2.new(0, 0, 0, 0)
    tabBar.Parent = main

    local tabList = Instance.new("UIListLayout")
    tabList.Padding = UDim.new(0, 14)
    tabList.SortOrder = Enum.SortOrder.LayoutOrder
    tabList.Parent = tabBar

    -- Content area
    local contentArea = Instance.new("Frame")
    contentArea.Size = UDim2.new(1, -210, 1, -75)
    contentArea.Position = UDim2.new(0, 200, 0, 70)
    contentArea.BackgroundTransparency = 1
    contentArea.Parent = main

    local window = {Notify = Notify}
    local tabs = {}
    local activeContent = nil

    function window:CreateTab(tabName)
        local tabBtn = Instance.new("TextButton")
        tabBtn.Size = UDim2.new(1, -28, 0, 54)
        tabBtn.BackgroundColor3 = Theme.Element
        tabBtn.BorderSizePixel = 0
        tabBtn.Text = tabName
        tabBtn.TextColor3 = Theme.SubText
        tabBtn.Font = Enum.Font.GothamSemibold
        tabBtn.TextSize = 17
        tabBtn.Parent = tabBar

        local btnCorner = Instance.new("UICorner")
        btnCorner.CornerRadius = UDim.new(0, 14)
        btnCorner.Parent = tabBtn

        local btnStroke = Instance.new("UIStroke")
        btnStroke.Color = Theme.Accent
        btnStroke.Thickness = 1.8
        btnStroke.Transparency = 1
        btnStroke.Parent = tabBtn

        local tabContent = Instance.new("ScrollingFrame")
        tabContent.Size = UDim2.new(1, -24, 1, -24)
        tabContent.Position = UDim2.new(0, 12, 0, 12)
        tabContent.BackgroundTransparency = 1
        tabContent.ScrollBarThickness = 6
        tabContent.ScrollBarImageColor3 = Theme.Accent
        tabContent.CanvasSize = UDim2.new(0, 0, 0, 0)
        tabContent.Visible = false
        tabContent.Parent = contentArea

        local contentList = Instance.new("UIListLayout")
        contentList.Padding = UDim.new(0, 18)
        contentList.SortOrder = Enum.SortOrder.LayoutOrder
        contentList.Parent = tabContent

        tabBtn.MouseButton1Click:Connect(function()
            if activeContent then activeContent.Visible = false end
            tabContent.Visible = true
            activeContent = tabContent

            for _, btn in tabBar:GetChildren() do
                if btn:IsA("TextButton") then
                    TS:Create(btn.UIStroke, TweenInfo.new(0.45), {Transparency = 1}):Play()
                    TS:Create(btn, TweenInfo.new(0.45), {TextColor3 = Theme.SubText, BackgroundColor3 = Theme.Element}):Play()
                end
            end
            TS:Create(tabBtn.UIStroke, TweenInfo.new(0.45), {Transparency = 0.3}):Play()
            TS:Create(tabBtn, TweenInfo.new(0.45), {TextColor3 = Theme.Accent, BackgroundColor3 = Theme.Darker}):Play()
        end)

        table.insert(tabs, tabContent)
        tabBar.CanvasSize = UDim2.new(0, 0, 0, tabList.AbsoluteContentSize.Y + 50)

        if #tabs == 1 then
            tabContent.Visible = true
            activeContent = tabContent
            TS:Create(tabBtn.UIStroke, TweenInfo.new(0.45), {Transparency = 0.3}):Play()
            TS:Create(tabBtn, TweenInfo.new(0.45), {TextColor3 = Theme.Accent, BackgroundColor3 = Theme.Darker}):Play()
        end

        local tabObj = {}

        function tabObj:CreateSection(name)
            local sec = Instance.new("TextLabel")
            sec.Size = UDim2.new(1, 0, 0, 38)
            sec.BackgroundTransparency = 1
            sec.Text = "‚îÄ‚îÄ‚îÄ " .. name .. " ‚îÄ‚îÄ‚îÄ"
            sec.TextColor3 = Theme.Accent
            sec.Font = Enum.Font.GothamSemibold
            sec.TextSize = 19
            sec.TextXAlignment = Enum.TextXAlignment.Left
            sec.Parent = tabContent

            tabContent.CanvasSize = UDim2.new(0, 0, 0, contentList.AbsoluteContentSize.Y + 50)
        end

        function tabObj:CreateToggle(opts)
            local toggle = Instance.new("Frame")
            toggle.Size = UDim2.new(1, 0, 0, 60)
            toggle.BackgroundColor3 = Theme.Element
            toggle.Parent = tabContent

            local tCorner = Instance.new("UICorner")
            tCorner.CornerRadius = UDim.new(0, 14)
            tCorner.Parent = toggle

            local label = Instance.new("TextLabel")
            label.Size = UDim2.new(0.74, 0, 1, 0)
            label.BackgroundTransparency = 1
            label.Text = opts.Name or "Toggle"
            label.TextColor3 = Theme.Text
            label.Font = Enum.Font.GothamSemibold
            label.TextSize = 16
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.Parent = toggle

            local indicator = Instance.new("Frame")
            indicator.Size = UDim2.new(0, 56, 0, 30)
            indicator.Position = UDim2.new(1, -84, 0.5, -15)
            indicator.BackgroundColor3 = Theme.Red
            indicator.Parent = toggle

            local indCorner = Instance.new("UICorner")
            indCorner.CornerRadius = UDim.new(1, 0)
            indCorner.Parent = indicator

            local state = opts.Default or false
            if state then
                indicator.BackgroundColor3 = Theme.Green
                indicator.Position = UDim2.new(1, -28, 0.5, -15)
            end

            local click = Instance.new("TextButton")
            click.Size = UDim2.new(1, 0, 1, 0)
            click.BackgroundTransparency = 1
            click.Parent = toggle

            click.MouseButton1Click:Connect(function()
                state = not state
                if state then
                    TS:Create(indicator, TweenInfo.new(0.38, Enum.EasingStyle.Quint), {BackgroundColor3 = Theme.Green, Position = UDim2.new(1, -28, 0.5, -15)}):Play()
                else
                    TS:Create(indicator, TweenInfo.new(0.38, Enum.EasingStyle.Quint), {BackgroundColor3 = Theme.Red, Position = UDim2.new(1, -84, 0.5, -15)}):Play()
                end
                if opts.Callback then opts.Callback(state) end
            end)

            -- Ripple
            click.MouseButton1Down:Connect(function(x, y)
                local ripple = Instance.new("Frame")
                ripple.Size = UDim2.new(0, 0, 0, 0)
                ripple.Position = UDim2.new(0, x - toggle.AbsolutePosition.X, 0, y - toggle.AbsolutePosition.Y)
                ripple.BackgroundColor3 = Theme.Accent
                ripple.BackgroundTransparency = 0.6
                ripple.ZIndex = 10
                ripple.Parent = toggle

                local rCorner = Instance.new("UICorner")
                rCorner.CornerRadius = UDim.new(1, 0)
                rCorner.Parent = ripple

                TS:Create(ripple, TweenInfo.new(0.75, Enum.EasingStyle.Quint), {Size = UDim2.new(0, 130, 0, 130), BackgroundTransparency = 1, Position = UDim2.new(0, x - toggle.AbsolutePosition.X - 65, 0, y - toggle.AbsolutePosition.Y - 65)}):Play()

                task.delay(0.75, ripple.Destroy, ripple)
            end)

            tabContent.CanvasSize = UDim2.new(0, 0, 0, contentList.AbsoluteContentSize.Y + 50)
            return toggle
        end

        function tabObj:CreateSlider(opts)
            local slider = Instance.new("Frame")
            slider.Size = UDim2.new(1, 0, 0, 68)
            slider.BackgroundColor3 = Theme.Element
            slider.Parent = tabContent

            local sCorner = Instance.new("UICorner")
            sCorner.CornerRadius = UDim.new(0, 14)
            sCorner.Parent = slider

            local label = Instance.new("TextLabel")
            label.Size = UDim2.new(0.62, 0, 0.45, 0)
            label.BackgroundTransparency = 1
            label.Text = opts.Name or "Slider"
            label.TextColor3 = Theme.Text
            label.Font = Enum.Font.GothamSemibold
            label.TextSize = 16
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.Parent = slider

            local valueBox = Instance.new("Frame")
            valueBox.Size = UDim2.new(0, 78, 0, 36)
            valueBox.Position = UDim2.new(1, -100, 0, 10)
            valueBox.BackgroundColor3 = Theme.Darker
            valueBox.Parent = slider

            local vbCorner = Instance.new("UICorner")
            vbCorner.CornerRadius = UDim.new(0, 10)
            vbCorner.Parent = valueBox

            local valueLbl = Instance.new("TextLabel")
            valueLbl.Size = UDim2.new(1, 0, 1, 0)
            valueLbl.BackgroundTransparency = 1
            valueLbl.Text = tostring(opts.Default or opts.Min or 0)
            valueLbl.TextColor3 = Theme.Accent
            valueLbl.Font = Enum.Font.GothamBold
            valueLbl.TextSize = 16
            valueLbl.Parent = valueBox

            local bar = Instance.new("Frame")
            bar.Size = UDim2.new(1, -40, 0, 12)
            bar.Position = UDim2.new(0, 20, 0.68, 0)
            bar.BackgroundColor3 = Theme.Darker
            bar.Parent = slider

            local fill = Instance.new("Frame")
            fill.Size = UDim2.new(0.5, 0, 1, 0)
            fill.BackgroundColor3 = Theme.Accent
            fill.Parent = bar

            local barCorner = Instance.new("UICorner")
            barCorner.CornerRadius = UDim.new(1, 0)
            barCorner.Parent = bar

            local fillCorner = Instance.new("UICorner")
            fillCorner.CornerRadius = UDim.new(1, 0)
            fillCorner.Parent = fill

            local dragging = false
            bar.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true end
            end)
            bar.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = false end
            end)

            UIS.InputChanged:Connect(function(input)
                if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                    local rel = math.clamp((input.Position.X - bar.AbsolutePosition.X) / bar.AbsoluteSize.X, 0, 1)
                    local val = math.floor(rel * (opts.Max - opts.Min) + opts.Min)
                    fill.Size = UDim2.new(rel, 0, 1, 0)
                    valueLbl.Text = tostring(val)
                    if opts.Callback then opts.Callback(val) end
                end
            end)

            tabContent.CanvasSize = UDim2.new(0, 0, 0, contentList.AbsoluteContentSize.Y + 50)
            return slider
        end

        function tabObj:CreateButton(opts)
            local btn = Instance.new("TextButton")
            btn.Size = UDim2.new(1, 0, 0, 58)
            btn.BackgroundColor3 = Theme.Accent
            btn.Text = opts.Name or "Button"
            btn.TextColor3 = Color3.new(0,0,0)
            btn.Font = Enum.Font.GothamBold
            btn.TextSize = 17
            btn.Parent = tabContent

            local bCorner = Instance.new("UICorner")
            bCorner.CornerRadius = UDim.new(0, 14)
            bCorner.Parent = btn

            btn.MouseButton1Click:Connect(function()
                if opts.Callback then opts.Callback() end
            end)

            btn.MouseEnter:Connect(function()
                TS:Create(btn, TweenInfo.new(0.3), {BackgroundColor3 = Theme.AccentDark}):Play()
            end)

            btn.MouseLeave:Connect(function()
                TS:Create(btn, TweenInfo.new(0.3), {BackgroundColor3 = Theme.Accent}):Play()
            end)

            tabContent.CanvasSize = UDim2.new(0, 0, 0, contentList.AbsoluteContentSize.Y + 50)
            return btn
        end

        function tabObj:CreateDropdown(opts)
            local dd = Instance.new("Frame")
            dd.Size = UDim2.new(1, 0, 0, 58)
            dd.BackgroundColor3 = Theme.Element
            dd.Parent = tabContent

            local ddc = Instance.new("UICorner")
            ddc.CornerRadius = UDim.new(0, 14)
            ddc.Parent = dd

            local label = Instance.new("TextLabel")
            label.Size = UDim2.new(0.7, 0, 1, 0)
            label.BackgroundTransparency = 1
            label.Text = opts.Name or "Dropdown"
            label.TextColor3 = Theme.Text
            label.Font = Enum.Font.GothamSemibold
            label.TextSize = 16
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.Parent = dd

            local selected = Instance.new("TextLabel")
            selected.Size = UDim2.new(0.26, 0, 0.82, 0)
            selected.Position = UDim2.new(0.72, 0, 0.09, 0)
            selected.BackgroundColor3 = Theme.Darker
            selected.Text = opts.Options[opts.Default or 1] or "Wybierz..."
            selected.TextColor3 = Theme.Accent
            selected.Font = Enum.Font.Gotham
            selected.TextSize = 15
            selected.Parent = dd

            local selCorner = Instance.new("UICorner")
            selCorner.CornerRadius = UDim.new(0, 10)
            selCorner.Parent = selected

            local listFrame = Instance.new("ScrollingFrame")
            listFrame.Size = UDim2.new(1, 0, 0, 0)
            listFrame.Position = UDim2.new(0, 0, 1, 6)
            listFrame.BackgroundColor3 = Theme.Element
            listFrame.BorderSizePixel = 0
            listFrame.ScrollBarThickness = 6
            listFrame.Visible = false
            listFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
            listFrame.Parent = dd

            local listLayout = Instance.new("UIListLayout")
            listLayout.Padding = UDim.new(0, 8)
            listLayout.Parent = listFrame

            local open = false
            selected.MouseButton1Click:Connect(function()
                open = not open
                if open then
                    listFrame.Visible = true
                    local h = math.min(#opts.Options * 46, 220)
                    TS:Create(listFrame, TweenInfo.new(0.45, Enum.EasingStyle.Quint), {Size = UDim2.new(1, 0, 0, h)}):Play()
                else
                    TS:Create(listFrame, TweenInfo.new(0.45, Enum.EasingStyle.Back), {Size = UDim2.new(1, 0, 0, 0)}):Play()
                    task.delay(0.46, function() listFrame.Visible = false end)
                end
            end)

            for i, opt in ipairs(opts.Options or {}) do
                local optBtn = Instance.new("TextButton")
                optBtn.Size = UDim2.new(1, -16, 0, 40)
                optBtn.Position = UDim2.new(0, 8, 0, 0)
                optBtn.BackgroundColor3 = Theme.Darker
                optBtn.Text = opt
                optBtn.TextColor3 = Theme.Text
                optBtn.Font = Enum.Font.Gotham
                optBtn.TextSize = 15
                optBtn.Parent = listFrame

                local oc = Instance.new("UICorner")
                oc.CornerRadius = UDim.new(0, 10)
                oc.Parent = optBtn

                optBtn.MouseButton1Click:Connect(function()
                    selected.Text = opt
                    open = false
                    TS:Create(listFrame, TweenInfo.new(0.45), {Size = UDim2.new(1, 0, 0, 0)}):Play()
                    task.delay(0.46, function() listFrame.Visible = false end)
                    if opts.Callback then opts.Callback(opt, i) end
                end)
            end

            tabContent.CanvasSize = UDim2.new(0, 0, 0, contentList.AbsoluteContentSize.Y + 40)
            return dd
        end

        function tabObj:CreateKeybind(opts)
            local kb = Instance.new("Frame")
            kb.Size = UDim2.new(1, 0, 0, 58)
            kb.BackgroundColor3 = Theme.Element
            kb.Parent = tabContent

            local kbc = Instance.new("UICorner")
            kbc.CornerRadius = UDim.new(0, 14)
            kbc.Parent = kb

            local label = Instance.new("TextLabel")
            label.Size = UDim2.new(0.7, 0, 1, 0)
            label.BackgroundTransparency = 1
            label.Text = opts.Name or "Keybind"
            label.TextColor3 = Theme.Text
            label.Font = Enum.Font.GothamSemibold
            label.TextSize = 16
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.Parent = kb

            local bindBox = Instance.new("TextButton")
            bindBox.Size = UDim2.new(0, 110, 0, 40)
            bindBox.Position = UDim2.new(1, -130, 0.5, -20)
            bindBox.BackgroundColor3 = Theme.Darker
            bindBox.Text = opts.Default and opts.Default.Name or "..."
            bindBox.TextColor3 = Theme.Accent
            bindBox.Font = Enum.Font.GothamBold
            bindBox.TextSize = 16
            bindBox.Parent = kb

            local bbc = Instance.new("UICorner")
            bbc.CornerRadius = UDim.new(0, 10)
            bbc.Parent = bindBox

            local binding = false
            bindBox.MouseButton1Click:Connect(function()
                binding = true
                bindBox.Text = "..."
            end)

            UIS.InputBegan:Connect(function(input)
                if binding and input.KeyCode ~= Enum.KeyCode.Unknown then
                    binding = false
                    bindBox.Text = input.KeyCode.Name
                    if opts.Callback then opts.Callback(input.KeyCode) end
                end
            end)

            tabContent.CanvasSize = UDim2.new(0, 0, 0, contentList.AbsoluteContentSize.Y + 40)
            return kb
        end

        return tabObj
    end

    Notify("Banana UI v6", "Biblioteka za≈Çadowana ‚Äì dodawaj w≈Çasne funkcje w callbackach", 6)

    return window
end

return Banana
